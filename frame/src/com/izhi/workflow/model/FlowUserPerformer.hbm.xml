<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.xenging.platform.workflow.model.FlowUserPerformer"
        table="WF_FLOW_USER_PERFORMER"
    >

        <id
            name="id"
            column="PK_ID"
            type="java.lang.Long"
            unsaved-value="-1"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-FlowUserPerformer.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="flowNodeBinding"
            class="com.xenging.platform.workflow.model.FlowNodeBinding"
            cascade="none"
            outer-join="auto"
            column="FK_FLOW_NODE_BINDING_ID"
        />

        <property
            name="userID"
            type="long"
            column="VC_PERFORMER_USER_ID"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-FlowUserPerformer.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
